{# This template is used as an ACF-block #}
<header class="hidden-animate">
	<div class="wrapper nav-top">
		{% if g.address %} 
		{% if g.itinirary %}<a class="link-icon" href="{{ g.itinirary }}">{% else %} <span class="link-icon"> {% endif %}

			<span class="icon">{% include 'assets/static/icons/contact/address.svg' %}</span> {{ g.address|striptags }}
			
		{% if g.itinirary %}</a>{% else %}</span>{% endif %}
		{% endif %}

		{% if g.phone or g.email %}
		<span>
			{% if g.phone %} <a class="link-icon" href="tel:{{ g.phone }}"><span class="icon">{% include 'assets/static/icons/contact/phone.svg' %}</span> {{ g.phone }}</a> {% endif %}
			{% if g.email %} <a class="link-icon" href="mailto:{{ g.email }}"><span class="icon">{% include 'assets/static/icons/contact/email.svg' %}</span> {{ g.email }}</a> {% endif %}
		</span>
		{% endif %}
	</div>

	<div class="wrapper">
		<a class="logo" href="{{site.link}}#introduction" aria-label="{{ g.name }}">
			<img src="{{ g.logo_solo.url }}" alt="{{ g.name }}">
			<span>
				{{ g.name }}
			</span>
		</a>
		
		<nav class="nav-main" role="navigation">
			<ul role="menu">
				{% for item in menu.items %}
					<li role="menuitem" 
					{% if p.id == item.id %} aria-current="page" {% endif %} 
					{% if item.children %} aria-haspopup="true" aria-expanded="false" {% endif %}>
						<a class="{{ item.classes|join(' ') }}" href="{{ item.link }}">{{ item.title }}{% if item.children %}{% include 'assets/static/icons/menu/dropdown-menu-arrow.svg' %}{% endif %}</a>
						{% if item.children %}
							<ul class="dropdown" role="menu" aria-hidden="true">
								{% for child in item.children %}
									<li role="menuitem">
										<a href="{{ child.link }}">{{ child.title }}</a>
									</li>
								{% endfor %}
							</ul>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
		</nav>
		
		<div class="nav-bottom">
			<button class="btn btn-menu js--toggle" data-toggle="menu" aria-label="{{ __('Ouvrir/fermer le menu', 'Non-editable strings') }}">
				<span class="icon">{% include 'assets/static/icons/menu/open-menu.svg' %}</span>
				<span class="icon">{% include 'assets/static/icons/menu/close-menu.svg' %}</span>
			</button>

			{% if g.bottom_nav_link.title %}
			<a class="nav-bottom-cta" href="{{ g.bottom_nav_link.url }}">
				{% if g.bottom_nav_link_icon %}
				<img class="icon" src="{{ g.bottom_nav_link_icon.url }}" alt="IcÃ´ne du bouton '{{ g.bottom_nav_link.title }}'">
				{% endif %}

				{{ g.bottom_nav_link.title }}
			</a>
			{% endif %}
		</div>
	</div>
</header>